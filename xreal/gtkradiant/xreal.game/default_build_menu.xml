<?xml version="1.0"?>
<!--
build commands
[RadiantPath]: path to Radiant .. C:\Program Files\Gtkradiant
[EnginePath]: path to the engine .. C:\XreaL\ C:\Program Files\XreaL\ /opt/XreaL/
-->
<project version="2.0">
<var name="xmap">"[EnginePath]xmap.[ExecutableType]"</var>
<var name="connect"><cond value="[MonitorAddress]">-connect [MonitorAddress]</cond></var>
<build name="xmap: (single) -bsp">
<command>[xmap] -v [connect] "[MapFile]"</command>
</build>
<build name="xmap: (single) -bsp -leaktest">
<command>[xmap] -v [connect] -leaktest "[MapFile]"</command>
</build>
<build name="xmap: (single) -vis">
<command>[xmap] -vis [connect] -saveprt "[MapFile]"</command>
</build>
<build name="xmap: (single test) -vis -fast">
<command>[xmap] -vis [connect] -saveprt -fast "[MapFile]"</command>
</build>
<build name="xmap: (single) -light">
<command>[xmap] -light [connect] -patchshadows "[MapFile]"</command>
</build>
<build name="xmap: (single test) -vlight">
<command>[xmap] -vlight [connect] "[MapFile]"</command>
</build>
<build name="xmap: (single) -onlyents">
<command>[xmap] [connect] -onlyents "[MapFile]"</command>
</build>
<build name="xmap: (test) -bsp -leaktest, -vis -fast">
<command>[xmap] -v [connect] -leaktest "[MapFile]"</command>
<command>[xmap] -vis [connect] -saveprt -fast "[MapFile]"</command>
</build>

bspc_env = env.Copy()
bspc_env.Append(CCFLAGS='-DBSPC')
#bspc_env.Append(CCFLAGS='-DAASINTERN')

if env['arch'] == 'linux-i386':
	bspc_env.Append(CCFLAGS='-Dstricmp=strcasecmp')
	bspc_env.Append(CCFLAGS='-DLINUX')

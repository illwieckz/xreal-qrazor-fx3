	}


itemDef {
	name mappreview
	ownerdraw UI_PREVIEWCINEMATIC
	rect 54 144 256 192
	border 1
	bordercolor  .5 .0 .1 .5
	forecolor 1 1 1 1
	outlinecolor .5 .0 .1 .5
	visible 1
	decoration
	visible 1
	}


itemDef {
      	name fadebox
      	style WINDOW_STYLE_FILLED
 	background "ui/assets/fadebox.tga"
	forecolor 0 0 0 1
	backcolor 0 0 0 1
	rect 0 0 640 480
      	visible 1 
	decoration
    	}





}









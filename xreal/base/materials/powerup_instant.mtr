models/powerups/instant/invis
{
	
	twosided
	{
		map models/powerups/instant/invis.png
      		
	}

	{
		map gfx/effect/effmap03.png
    		blend add
  		
     	  	scroll 0, sinTable[time * 0.2] * 0.5 + 0.5
          
	}
	
}






models/powerups/instant/invis_ring
{
	{
		edgeClamp
		map gfx/effect/effmap02.png
      		
  		red	0.24 + sinTable[time * 2] * 0.4
     		green 0.76 + sinTable[time * 2] * 0.4
     		blue	0.85 + sinTable[time *2] * 0.4
     		
          	rotate time * -0.1
          	blend add
	}

	{
		edgeClamp
		map gfx/effect/effmap01.png
		
        		rotate time * 0.2
        		
		blend add
		
		red	0.24  + sinTable[time * 0.3] * 0.5
     		green 0.76 + sinTable[time * 0.3] * 0.5
		blue	0.9 + sinTable[time * 3] * 0.5

	}
}

models/powerups/instant/invis_flare
{
	deformVertexes autosprite
	{
		edgeClamp
		map gfx/effect/flare01.png
		blend add
       		rotate time * 0.3
		blend add
		blue	0.3 + sinTable[time * 0.29] * 0.5

	}
	{
		edgeClamp
		map gfx/effect/flare01.png
		blend add
       		rotate time * -0.5
		blend add
		blue	0.4 + sinTable[time * 0.31] * 0.5

	}
}




models/powerups/instant/haste
{
	
	twosided
	{
		map models/powerups/instant/haste.png
       		
		blend GL_ONE, GL_ZERO
	}

	{
		edgeClamp
		map gfx/effect/effmap02.png
        		
  		red	0.714 + sinTable[time * 0.2] * 0.4
     		green 0.66 + sinTable[time * 0.2] * 0.4
     		blue	0.075 + sinTable[time * 0.2] * 0.4
          	rotate time * -0.8
          	blend add
	}

	{
		edgeClamp
		map gfx/effect/effmap01.png
        		rotate time * 0.6
		blend add
		red	0.714 + sinTable[time * 0.2] * 0.4
     		green 0.66 + sinTable[time * 0.2] * 0.4
     		blue	0.075 + sinTable[time * 0.2] * 0.4

	}
	
	
	{
		map models/powerups/instant/haste_glow.png
		rgbGen wave sin .5 .5 .3 0.5	
		blend blend
	}
	
}





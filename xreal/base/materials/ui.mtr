ui/cursor
{
	nopicmip
	nomipmaps

	{
		blend blend
		map gfx/2d/ui/cursor.png
	}

	{
		blend blend
		clampmap gfx/2d/ui/cursor_overlay.png
		tcmod rotate 99
	}
	{
		blend blend
		clampmap gfx/2d/ui/cursor_overlay.png
		tcmod rotate -99
	}

}


models/weapons/machinegun/machinegun_muzzflash
{
	twoSided
	deform sprite
	sort nearest
	noShadows
	{
		forceHighQuality
		if 	( time + parm4 ) * 8 < 1.0
		blend 	add
		map 	models/weapons/machinegun/machinegun_muzzflash_strip.tga
		scale 	1 / 12 , 1
		scroll 	q2table12[ (time + parm4) * 8 ] , 0
		rotate	q2rotate90[ parm5 ]
	}
}


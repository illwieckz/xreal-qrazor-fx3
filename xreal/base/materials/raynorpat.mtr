//
// Lights
//
raynorpat/lights/xreal_logo
{
	{
		forceHighQuality
		map textures/raynorpat/lights/xreal_logo.png
		colored
		zeroClamp
	}
}


textures/raynorpat/lights/ironcross_tall
{
	qer_editorimage textures/raynorpat/lights/ironcrosslt2tall.png

	bumpMap textures/raynorpat/lights/ironcrosslt2tall_norm.png
	diffuseMap textures/raynorpat/lights/ironcrosslt2tall.png
	specularMap textures/raynorpat/lights/ironcrosslt2tall_spec.png
	{
		map textures/raynorpat/lights/ironcrosslt2tall.blend.png
		blend add
	}
}

textures/raynorpat/lights/ironcross_wide

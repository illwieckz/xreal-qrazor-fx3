
textures/reflex/lights/strim01_orange
{
    qer_editorimage  textures/reflex/lights/strim01
    
    xmap_surfaceLight 4000
	xmap_lightRGB 0.94 0.57 0.13
	xmap_lightImage textures/reflex/lights/strim01_glow
      xmap_lightSubdivide 16
	 
    diffusemap       textures/reflex/lights/strim01
    specularMap      textures/reflex/lights/strim01_spec
    bumpmap          textures/reflex/lights/strim01_local

	{
		blend		add
		map	      textures/reflex/lights/strim01_glow
        color       0.94 * (jitter5 [time * 2]), 0.57 * (jitter5 [time * 2]), 0.13 * (jitter5 [time * 2]), 1.0
	}
}

